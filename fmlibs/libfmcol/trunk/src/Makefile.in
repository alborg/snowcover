SHELL = /bin/sh

srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
incdir = @includedir@
libdir = @libdir@

CFLAGS = @CFLAGS@ @DEFS@ -I./

CPPFLAGS = @CPPFLAGS@

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@


HEADER_FILES = \
  fmcol_config.h \
  fmcol.h \
  avhrr_stdat.h \
  nwp_stdat.h \
  nwp_read.h \
  std_stdat.h \
  safcm_stdat.h \
  safssi_stdat.h \
  safdli_stdat.h \
  fmcolaccess.h

SRC_FILES = \
  decode_cfg.c \
  error.c \
  avhrr_stdat.c \
  check_avhrr.c \
  check_safct.c \
  nwp_stdat.c \
  nwp_read.c \
  std_stdat.c \
  safcm_stdat.c \
  safssi_stdat.c \
  safdli_stdat.c \
  fmcolaccess.c \
  fmcoltst.c

AUTOMATED_FILES = \
   Makefile \
   fmcol_config.h

.SUFFIXES:
.SUFFIXES: .c .o

.PHONY: clean install distclean

LIBFILE = libfmcol.a

OBJ_FILES := $(SRC_FILES:.c=.o)

$(LIBFILE): $(OBJ_FILES) 
	$(AR) $(ARFLAGS) $(LIBFILE) $(OBJ_FILES)

$(OBJ_FILES): $(HEADER_FILES)

clean:
	find $(srcdir) -name "*.o" -exec rm -f {} \;
	find $(srcdir) -name "*.a" -exec rm -f {} \;

distclean:
	$(MAKE) clean
	rm -rf $(AUTOMATED_FILES)

install:
	install -d $(incdir)
	install --mode=644 $(HEADER_FILES) $(incdir)
	install -d $(libdir)
	install --mode=644 $(LIBFILE) $(libdir)

